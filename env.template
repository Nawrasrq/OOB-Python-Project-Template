# Environment Variables Template
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# =============================================================================
# DATABASE CONNECTIONS
# =============================================================================
# SQL Server with Windows Authentication
SQL_WINDOWS_AUTH_CONN=mssql+pyodbc://server_name/database_name?driver=ODBC+Driver+17+for+SQL+Server&trusted_connection=yes

# SQL Server with SQL Authentication
SQL_SQL_AUTH_CONN=mssql+pyodbc://username:password@server_name/database_name?driver=ODBC+Driver+17+for+SQL+Server

# PostgreSQL
SQL_POST_CONN=postgresql://username:password@localhost:5432/database_name

# MySQL
SQL_MYSQL_CONN=mysql+pymysql://username:password@localhost:3306/database_name

# SQLite (local file database)
SQL_LOCAL_CONN=sqlite:///./data/local_database.db

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Base API URL and Authentication
API_BASE_URL=https://api.example.com/v1
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
API_TOKEN=your_bearer_token_here

# API Request Settings
API_TIMEOUT=30
API_RETRY_COUNT=3
API_RETRY_DELAY=1

# =============================================================================
# FILE PATHS
# =============================================================================
INPUT_PATH=./data/input
OUTPUT_PATH=./data/output
ARCHIVE_PATH=./data/archive
TEMP_PATH=./data/temp
LOG_PATH=./logs

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG_MODE=true
APP_NAME=ETL_Project
LOG_LEVEL=INFO
